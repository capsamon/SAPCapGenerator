{
    "name": "<SERVICENAME>-srv",
    "version": "0.0.1",
    "type": "module",
    "description": "<SERVICENAME> CAP service",
    "repository": "https://bitbucket.org/asmlitccbbdp/<REPOSITORYNAME>",
    "license": "",
    "private": true,
    "engines": {
      "node": "^20.0.0"
    },
    "dependencies": {
        "@cap-js-community/odata-v2-adapter": "^1.x",
        "@sap/audit-logging": "^6.x",
        "@sap/cds": "^8.2.3",
        "@sap/cds-compiler": "^5.x",
        "@sap/hdbext": "^8.x",
        "@sap/xsenv": "^5.x",
        "@sap/xssec": "^4.1.3",
        "cds-swagger-ui-express": "^0.x",
        "express": "^4.x",
        "hdb": "^0.19.8",
        "passport": "^0.x",
        "sap-hdbext-promisfied": "^2.202405.1",
        "typescript": "5.6.2"
    },
    "devDependencies": {
        "@cap-js/cds-types": "^0.6.5",
        "@types/sap__xsenv": "^3.3.2",
        "tsx": "4.19.1",
        "@types/passport": "^1.0.16",
        "@types/node": "^22.7.3",
        "@sap/cds-dk": "8.2.3"
    },
    "scripts": {
      "preinstall": "npm -v && node -v",
      "start": "cds-tsx serve",
      "start:debug": "npx -n=\"--inspect=127.0.0.1:22562\" cds-tsx serve",
      "start:develop": "cds-tsx serve --profile nosecurity",
      "cleanup:modules": "rm -rf node_modules && rm -rf */node_modules && rm -rf */*/node_modules"
    },
    "eslintConfig": {
      "extends": "eslint:recommended",
      "env": {
        "es2020": true,
        "node": true,
        "jest": true,
        "mocha": true
      },
      "globals": {
        "SELECT": true,
        "INSERT": true,
        "UPDATE": true,
        "DELETE": true,
        "CREATE": true,
        "DROP": true,
        "CDL": true,
        "CQL": true,
        "CXL": true,
        "cds": true
      },
      "rules": {
        "no-console": "off",
        "require-atomic-updates": "off"
      }
    },
    "cds": {
      "build": {
        "target": ".",
        "tasks": [
          {
            "for": "node-cf",
            "src": "."
          }
        ]
      },
      "hana": {
        "deploy-format": "hdbtable",
        "syntax": "hdi"
      },
      "requires": {
        "db": {
          "kind": "hana",
          "pool": {
            "acquireTimeoutMillis": 60000,
            "min": 10,
            "max": 200,
            "evictionRunIntervalMillis": 30000,
            "numTestsPerEvictionRun": 50,
            "softIdleTimeoutMillis": 60000,
            "idleTimeoutMillis": 60000
          },
          "model": [
            "db",
            "srv"
          ]
        },
        "node-cf": {
          "model": "gen/srv/csn.json"
        },
        "uaa": {
          "kind": "xsuaa"
        },
        "[localtest]": {
          "auth": {
            "kind": "basic-auth",
            "users": {
              "joop": {
                "password": "joop",
                "roles": [
                  "<SERVICENAME>_READ"
                ]
              }
            }
          }
        },
        "[nosecurity]": {
          "auth": {
            "kind": "dummy-auth"
          }
        }
      },
      "odata": {
        "version": "v4"
      }
    },
    "files": [
      "db",
      "srv"
    ]
  }